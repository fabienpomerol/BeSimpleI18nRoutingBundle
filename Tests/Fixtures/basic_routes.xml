<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://example.com/schema/be_simple_i18n_routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <route id="homepage" pattern="/">
        <default key="_controller">TestBundle:Frontend:homepage</default>
    </route>

    <route id="welcome">
        <locale key="en">/welcome</locale>
        <locale key="fr">/bienvenue</locale>
        <locale key="de">/willkommen</locale>
        <default key="_controller">TestBundle:Frontend:welcome</default>
    </route>
</routes>